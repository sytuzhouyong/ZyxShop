/* pages/home/home.wxss */
.category-view {
  display: flex;
  width: 100%;
  /* background-color: antiquewhite; */
  white-space: nowrap;
}

.line {
  background-color: #dddddd;
  height: 0.5rpx;
}

.category-item {
  height: 60rpx;
  width: 100rpx;
  text-align: center; 
  display: inline-block; /* 水平排列 */
  font: 12px Helvetica;
}

.category-title-unselected {
  color: #666666;
}

.category-title-selected {
  color: #f45;
}

.category-item-hover {
  color: red;
}

/* -------------------- */

.shelf-nav {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  background-color: peachpuff;
}

.shelf-nav-item {
  /* width: 25%; */
  margin-bottom: 30rpx;
  text-align: center;
}

.shelf-nav-item__image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #d9d9d9;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

/* -------------------- */
.products-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-left: 0;
  margin-right: 0;
}

.product-item-container {
  width: 45%;
  margin: auto;
  /* height: 200rpx; */
  margin-bottom: 30rpx;
  text-align: center;
}

.product-item__image {
  display: block;
  width: 90%;
  height: 260rpx;

}