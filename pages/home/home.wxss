.ub
{
	display: -webkit-box;
	display: -moz-box;
	display: box;
	position:relative;
}

.ub-fh
{
	width:100%;
}

.ub-fv
{
	height:100%;
}

.ub-ac
{
	-webkit-box-align:center;
	-moz-box-align:center;
	box-align:center;
}

.ub-ae
{
	-webkit-box-align:end;
	-moz-box-align:end;
	box-align:end;
}

.ub-pc
{
	-webkit-box-pack:center;
	-moz-box-pack:center;
	box-pack:center;
}
.ub-pe
{
	-webkit-box-pack:end;
	-moz-box-pack:end;
	box-pack:end;
}

.ub-pj
{
	-webkit-box-pack:justify;
	-moz-box-pack:justify;
	box-pack:justify;
}

.ub-ver
{
	-webkit-box-orient:vertical;
	-moz-box-orient:vertical;
	box-orient:vertical;
}
.ub-f1
{
	position:relative;
	-webkit-box-flex: 1;
	-moz-box-flex: 1;  
	box-flex: 1;
}