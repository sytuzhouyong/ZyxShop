<!--pages/home/home.wxml-->
<scroll-view class="category-view" scroll-x>
  <view class="category-item {{item.selected ? 'category-title-selected' : 'category-title-unselected'}}" bindtap='tapOnCategoryItem' data-category='{{item}}' data-index='{{index}}' wx:for="{{categories}}" wx:key="category">
    {{item.title}}
  </view>
  <view animation='{{indicatorAnimation}}' class='indicator' style='margin-left:{{indicatorMarginLeft}}rpx;'></view>
</scroll-view>
<view class='line'></view>

<swiper indicator-dots='true' indicator-color='#FFFFFF' indicator-active-color='#FF1111'>
  <block wx:for='{{imageUrls}}' wx:key='swiper-item'>
    <swiper-item>
      <image src='{{item}}' width='100%' height='150'></image>
    </swiper-item>
  </block>
</swiper>

<view style='width:100%; height:40rpx'></view>
<view animation="{{animationData}}" style="background:red; height:100rpx; width:100rpx"></view>

